<h1>Editing Tournament</h1>

<%= render 'form', tournament: @tournament %>

<%= render 'form', tournament: @tournament %>

<br />
<form>
  <label>Enter player name
    <input type="text" placeholder="Player A">
  </label>
</form>

<button type="button" class="button success">Create player</button>

<table>
  <thead>
    <tr>
      <th>Seat #</th>
      <th>Icon</th>
      <th>Player name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td><%= player.icon_img %></td>
        <td><%= player.name %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="space-around">
  <div class="third">
      <button type="button" class="button expand">Add 8 players</button>
  </div>
  <div class="two-thirds">
    <button type="button" class="button expand">Randomize seating</button>
  </div>
</div>

<br />
<button type="button" class="button large warning">Create Round 1 pairings</button>

<h3>Round No. 1</h3>

<table>
  <thead>
    <tr>
      <th>Round #</th>
      <th>Match #</th>
      <th colspan="2">Player A</th>
      <th></th>
      <th colspan="2">Player B</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matchups.each do |matchup| %>
      <tr>
        <td><%= matchup.round_id %></td>
        <td><%= matchup.id %></td>
        <td><em>PLAYER A</em> </td>
        <td><strong>vs</strong></td>
        <td><em>PLAYER B</em></td>        
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Current Standings</h3>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th colspan="3">Player name</th>
      <th colspan="4">Score</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td><%= player.icon_img %> <%= player.name %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
