<p id="notice"><%= notice %></p>

<h2>Viewing Tournament No. <%= @tournament.id %> </h2>

<p>
  <strong>Name:</strong> <%= @tournament.name %>
</p>

<p>
  <strong>Created by:</strong> User No. <%= @user_id %> 
</p>

<h3>Players</h3>

<table>
  <thead>
    <tr>
      <th>Seat #</th>
      <th>Icon</th>
      <th>Player name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td><%= player.icon_img %></td>
        <td><%= player.name %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

